<div class="bcg screen" id="screen-maps" data-video="http://player.vimeo.com/external/97766233.hd.mp4?s=2f0b495f08bcaa3aa3ac996af32cc3f2">
  <div class="row full-height">
    <div class="col-sm-12 map-overlap">
      <div class="col-md-3 full-height" style="padding-top: 200px;">
        <div class="form-horizontal" style="width=100%;">
          <p id="plant-desc" style="color:white"><u>Step 1: Choose a Species</u></p>
          <div class="form-group">
            <div class="controls">
             {{view Ember.Select
                id="plantSelect"
                contentBinding="controllers.plants.arrangedContent"
                optionValuePath="content.sci_name"
                optionLabelPath="content.name"
                valueBinding="selectedPlant"
               
                prompt="Select a Species"}}
            </div>
          </div>
          <div class="rcp-toolbar btn-group" vertical-align="center"> 
          <p id="rcp-desc" style="color:white"><u>Step 2: Choose an Climate Scenario</u></p>
            <label class="rcp-label" id="rcp26-label"for="best-case">
              {{view Forests.RadioButton id="best-case" name="rcp-radio" selectionBinding="selectedRcp" value="rcp26"}}
             <div class="best-case-label"></div>
             <h3>Best</h3>
            </label>
            <label  id="rcp85-label" class="rcp-label" for="worst-case">
              {{view Forests.RadioButton id="worst-case" name="rcp-radio" selectionBinding="selectedRcp" value="rcp85"}}
            <div class="worst-case-label"></div>
            <h3>Worst</h3>
            </label>
          </div>
          <p id="year-desc" style="color:white"><u>Step 3: Pick a year</u></p>
          <div class="form-group">
            <button class="btn-control" id="current" {{action "switchCurrent"}} value="2011"><h3>Now</h3></button>
            <button class="btn-control" id="future" {{action "switchFuture"}} value="2081"><h3>2081</h3></button>
          </div>
          <div class="form-group">
            <!--label for="location" class="col-sm-2 control-label" style="color=white;">Location</label-->
            {{view Ember.TextField   valueBinding="selectedAddress" target="view.earthInstance" style="width:70%;"placeholder="Go to..."}}
            <button class="btn-control" {{action 'geocode' target='view.earthInstance'}}><i class="glyphicon glyphicon-arrow-right"></i></button>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <p style="color:white"><u>Step 4: Get the map</u></p>

              <button type="submit" class="btn btn-map" {{action 'getMap' target="view.earthInstance"}}>Get Map <i class="glyphicon glyphicon-arrow-right"></i></button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8 full-height pull-right" style="padding-top:120px;">

        {{view 'earth' viewName="earthInstance"}}
    </div>
  </div>
</div>


